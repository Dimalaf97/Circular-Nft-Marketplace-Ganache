{
  "compilerOptions": {
    "baseUrl": ".", //Base Url becomes route Folder of the Project
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@ui" :["components/ui"], // Updated Paths for easier Imports!
      "@ui/*":["components/ui/*"],
      "@providers" :["components/providers"], // Updated Paths for easier Imports!
      "@providers/*":["components/providers/*"],
      "@hooks" :["components/hooks"], // Updated Paths for easier Imports!
      "@hooks/*":["components/hooks/*"],
      "@_types/*":["types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
